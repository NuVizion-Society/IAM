---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ site.podcast.title }}</title>
    <description>{{ site.podcast.description }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/podcast</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml" />
    <language>{{ site.podcast.language }}</language>
    <managingEditor>{{ site.podcast.email }} ({{ site.podcast.author }})</managingEditor>
    <webMaster>{{ site.podcast.email }} ({{ site.podcast.author }})</webMaster>
    <copyright>{{ site.podcast.owner_name }}</copyright>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <image>
      <url>{{ site.url }}{{ site.baseurl }}{{ site.podcast.image }}</url>
      <title>{{ site.podcast.title }}</title>
      <link>{{ site.url }}{{ site.baseurl }}/podcast</link>
    </image>
    <itunes:subtitle>{{ site.podcast.subtitle }}</itunes:subtitle>
    <itunes:author>{{ site.podcast.author }}</itunes:author>
    <itunes:summary>{{ site.podcast.description }}</itunes:summary>
    <itunes:description>{{ site.podcast.description }}</itunes:description>
    <itunes:owner>
      <itunes:name>{{ site.podcast.owner_name }}</itunes:name>
      <itunes:email>{{ site.podcast.owner_email }}</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.url }}{{ site.baseurl }}{{ site.podcast.image }}" />
    <itunes:category text="{{ site.podcast.category }}">
      <itunes:category text="{{ site.podcast.subcategory }}" />
    </itunes:category>
    <itunes:explicit>{{ site.podcast.explicit }}</itunes:explicit>
    
    {% for episode in site.episodes reversed %}
    <item>
      <title>{{ episode.title }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ episode.url }}</link>
      <pubDate>{{ episode.date | date_to_rfc822 }}</pubDate>
      <description><![CDATA[{{ episode.content | strip_html | truncatewords: 50 }}]]></description>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ episode.url }}</guid>
      {% if episode.audio_url %}
      <enclosure url="{{ episode.audio_url }}" length="{{ episode.audio_length | default: '0' }}" type="audio/mpeg" />
      {% endif %}
      <itunes:author>{{ site.podcast.author }}</itunes:author>
      <itunes:subtitle>{{ episode.subtitle | default: episode.title }}</itunes:subtitle>
      <itunes:summary><![CDATA[{{ episode.content | strip_html | truncatewords: 100 }}]]></itunes:summary>
      <itunes:duration>{{ episode.duration }}</itunes:duration>
      {% if episode.season %}
      <itunes:season>{{ episode.season }}</itunes:season>
      {% endif %}
      {% if episode.episode_number %}
      <itunes:episode>{{ episode.episode_number }}</itunes:episode>
      {% endif %}
      <itunes:episodeType>{{ episode.episode_type | default: 'full' }}</itunes:episodeType>
    </item>
    {% endfor %}
  </channel>
</rss>
